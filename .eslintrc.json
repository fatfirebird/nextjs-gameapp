{
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": [
        "plugin:react/recommended",
        "standard",
        "prettier",
        "plugin:prettier/recommended"

    ],
    "parserOptions": {
        "ecmaFeatures": {
            "jsx": true
        },
        "ecmaVersion": 12,
        "sourceType": "module"
    },
    "plugins": [
        "react",
        "prettier"
    ],
    "rules": {
        "prettier/prettier": [
            "error",
            {
                "singleQuote": true,
                "semi": false
            }
        ],
        "react/no-unescaped-entities": 0,
        "no-extra-semi": "off",
        "semi": ["error", "never"],
        "quotes": ["error", "single"],
        "react/prop-types": "off",
        "react/jsx-filename-extension": ["error", { "extensions": [".jsx", ".tsx"] }],
        "no-plusplus": "off"
    },
    "settings": {
        "react": {
          "pragma": "React",
          "version": "detect"
        }
    }
}
